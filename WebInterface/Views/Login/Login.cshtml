@model Escalator.Common.Models.UserCred
@{
    ViewBag.Title = "Login";

}


<div style="text-align: center;">
    @using (Html.BeginForm())
    {
    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12" style="margin: auto;">
        <div class="card">
            @Html.ValidationSummary(true)
            <h5 class="card-header">Login</h5>
            <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Username, new { @class = "control-label col-md-2"})
                        @Html.EditorFor(model => model.Username)
                        @Html.ValidationMessageFor(model => model.Username)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2"})
                        @Html.PasswordFor(model => model.Password, new {@type = "password"})    
                        @Html.ValidationMessageFor(model => model.Password)           
                    </div>
                    <button type="submit" value="Submit" class="btn btn-space btn-primary">Submit</button>
            </div>
        </div>
    </div>
    }
</div>

<p>@ViewBag.Result</p>