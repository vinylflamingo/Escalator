@model WebInterface.Models.MyTicketsViewModel
@{

    ViewData["Title"] = "My Open Tickets";
}

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h5 class="card-header">My Open Tickets</h5>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered first">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Status</th>
                            <th>Ticket Type</th>
                            <th>Jurisdiction</th>
                            <th>Opened</th>
                            <th>Account</th>
                            <th>Submitted By</th>
                            <th>Details</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                    @{
                        foreach (var item in Model.tickets)
                        if (item.AssignedAgent == Model.AgentId && item.IsCompleted == false)
                        {
                            {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Status</td>
                                <td>@Model.ticketTypes.Where(x => x.Id == item.ticketType).DefaultIfEmpty(new Escalator.Common.Models.TicketType {Type = "DELETED"}).First().Type</td>
                                <td>@Model.jurisdictions.Where(x => x.Id == item.JurisdictionId).DefaultIfEmpty(new Escalator.Common.Models.Jurisdiction {Name = "DELETED"}).First().Name</td>
                                <td>@item.OpenDate</td>
                                <td>@item.OriginalAccount</td>
                                <td>@item.WhoSubmitted</td>
                                <td><a asp-controller="Ticket" asp-action="AdminEdit" asp-route-ticketId=@item.Id>Details</a></td>
                            </tr> 
                            }    
                        }
   
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

