@model CommonViewModel
@{

    ViewData["Title"] = "Ticket Types";
}

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h5 class="card-header">Ticket Type</h5>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered first">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Type</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @{
                        foreach (var item in Model.ticketTypes)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Type</td>
                                <td><a asp-controller="Ticket" asp-action="EditType" asp-route-typeId=@item.Id>Edit</a></td>
                            </tr>           
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>