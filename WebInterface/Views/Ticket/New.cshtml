@model WebInterface.Models.TicketViewModel
@{
    ViewBag.Title = "Create New Ticket";

}

<div style="text-align: center;">
    @using (Html.BeginForm())
    {
    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12" style="margin: auto;">
        <div class="card">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ticket.Id)
            <h5 class="card-header">New Ticket</h5>
            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(model => model.ticket.ticketType, new { @class = "control-label col-md-2"})
                    @Html.DropDownListFor(m => m.ticket.ticketType, new SelectList(Model.ticketTypes, "Id", "Type"))
                    @Html.ValidationMessageFor(model => model.ticket.ticketType)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ticket.JurisdictionId, new { @class = "control-label col-md-2"})
                    @Html.DropDownListFor(m => m.ticket.JurisdictionId, new SelectList(Model.jurisdictions, "Id", "Name"))                      
                    @Html.ValidationMessageFor(model => model.ticket.JurisdictionId)           
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ticket.DueBy, new { @class = "control-label col-md-2"})
                    @Html.EditorFor(model => model.ticket.DueBy)
                    @Html.ValidationMessageFor(model => model.ticket.DueBy)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ticket.PhoneNumber, new { @class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ticket.PhoneNumber)
                        @Html.ValidationMessageFor(model => model.ticket.PhoneNumber)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ticket.EmailAddress, new { @class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ticket.EmailAddress)
                        @Html.ValidationMessageFor(model => model.ticket.EmailAddress)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ticket.Invoices, new { @class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ticket.Invoices)
                        @Html.ValidationMessageFor(model => model.ticket.Invoices)
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.ticket.Details, new { @class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ticket.Details)
                        @Html.ValidationMessageFor(model => model.ticket.Details)
                    </div>
                </div>




                <div class="row">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</div>

