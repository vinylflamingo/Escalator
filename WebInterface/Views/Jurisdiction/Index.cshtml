@model WebInterface.Models.JurisdictionsViewModel
@{

    ViewData["Title"] = "Jurisdictions";
}

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h5 class="card-header">Jurisdictions</h5>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered first">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Jurisdiction</th>
                            <th>Default Agent</th>
                        </tr>
                    </thead>
                    <tbody>
                    @{
                        foreach (var item in Model.jurisdictions)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.DefaultAgentId</td>
                            </tr>           
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>