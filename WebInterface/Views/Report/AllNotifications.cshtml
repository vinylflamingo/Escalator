@model WebInterface.Models.CommonViewModel
@{

    ViewData["Title"] = "Reports";
}

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h5 class="card-header">All Notifications</h5>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered first">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Subject</th>
                            <th>Sent To</th>
                            <th>Date Created</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                    @{
                        foreach (var item in Model.contactRecords)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Subject</td>
                                <td>@item.SentTo</td>
                                <td>@item.Created</td>
                                <td><a href="/record/@item.Id">Details</a></td>
                            </tr>           
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>